{
    "id": "http://psi.org/mztab/m/1.1#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema for an mzTab metadata section",
    "type": "object",
    "required": [ 
        "prefix",
        "mzTab-version",
        "mzTab-mode",
        "mzTab-type",
        "description",
        "ms_run-location"
    ],
    "properties": {
        "prefix": {
            "enum": ["MTD"]
        },
        "mzTab-version": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"  
        },
        "ms_run-location": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" },
            "uniqueItems": true
        },
        "readonly": { "type": "boolean" }
    },
    "definitions": {
        "diskDevice": {},
        "diskUUID": {},
        "nfs": {},
        "tmpfs": {}
    }
}
